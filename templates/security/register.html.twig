{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-6"> 
            <form method="post">

                {% if app.user %}
                    <div class="mb-3 text-center">
                        Jesteś zalogowany jako {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Wyloguj</a>
                    </div>
                {% else %}
                    <div class="mb-3 text-center">
                        Już masz konto? <a href="{{ path('app_login') }}">Zaloguj się</a>
                    </div> 
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center form-group">Zarejestruj się</h1>
                
                {{ form_start(form) }}
                <div class="form-group text-center">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-group text-center">
                    {{ form_row(form.password) }}
                </div>
                <div class="form-group text-center">
                    {{ form_widget(form.register, {'attr': {'class': 'btn btn-lg btn-primary' } } )}}
                </div>
                
                
                {{ form_end(form) }}

                {# <label for="username">Email</label>
                <input type="email" value="" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                > #}

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}

                {# <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button> #}
            </form>
        </div>
    </div>
</div>
{% endblock %}
