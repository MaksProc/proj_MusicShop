{% extends "base.html.twig" %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6 text-center mb-4 mb-md-0">
            {# Images not yet implemented #}
            {% if product.imagePath %}
            <img src="/uploads/products/{{ asset(product.imagePath) }}" alt="{{ product.name }}" class="img-fluid rounded shadow">
            {% endif %}
        </div>

        <!-- Product Info -->
        <div class="col-md-6 d-flex flex-column justify-content-center">
            <h2 class="mb-3">{{ product.name }}</h2>
            <p class="text-muted">{{ product.description }}</p>

            <div class="mt-4">
                {% if app.user %}
                    {% if product.type.value == "both" %}
                    <a class="btn btn-primary me-2" id="btn-purchase" data-productid="{{ product.id }}">Buy</a>
                    <a class="btn btn-outline-secondary" id="btn-rent" data-productid="{{ product.id }}">Rent</a>
                    {% elseif product.type.value == "buy" %}
                    <a class="btn btn-primary" id="btn-purchase" data-productid="{{ product.id }}">Buy</a>
                    {% elseif product.type.value == "rent" %}
                    <a class="btn btn-outline-secondary" id="btn-rent" data-productid="{{ product.id }}">Rent</a>
                    {% endif %}
                {% else %}
                    <p>Zaloguj się, aby kupić lub wypożyczyć ten produkt</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
<div class="transaction-form-container">

</div>
<script src="{{ asset('js/shop_product_page.js') }}"></script>
{% endblock %}
